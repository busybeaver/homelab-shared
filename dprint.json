{
  "incremental": true,

  "lineWidth": 120,
  "indentWidth": 2,
  "useTabs": false,

  "typescript": {
    "semiColons": "always",
    "quoteStyle": "alwaysSingle",
    "singleBodyPosition": "sameLine"
  },

  "json": {
  },

  "markdown": {
  },

  "dockerfile": {
  },

  "toml": {
  },

  "includes": ["**/{Dockerfile,*.ts,*.tsx,*.js,*.jsx,*.cjs,*.mjs,*.json,*.md,*.toml}"],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/state"
  ],

  "plugins": [
    "https://plugins.dprint.dev/typescript-0.68.0.wasm",
    "https://plugins.dprint.dev/json-0.15.1.wasm",
    "https://plugins.dprint.dev/markdown-0.13.1.wasm",
    "https://plugins.dprint.dev/dockerfile-0.2.2.wasm",
    "https://plugins.dprint.dev/toml-0.5.4.wasm"
  ]
}
